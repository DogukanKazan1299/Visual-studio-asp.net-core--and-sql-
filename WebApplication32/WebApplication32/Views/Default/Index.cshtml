@using WebApplication32.Models
@model List<Birim>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Departman</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.BirimID.</td>
            <td>@x.BirimAd</td>
            <td><a href="/Default/BirimSil/@x.BirimID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Default/BirimGetir/@x.BirimID" class="btn btn-success">GÜNCELLE</a></td>
            <td><a href="/Default/BirimDetay/@x.BirimID" class="btn btn-default">DETAYLAR</a></td>
        </tr>



    }

</table>
<a href="/Default/YeniBirim/" class="btn btn-primary">YENİ BİRİM</a>
