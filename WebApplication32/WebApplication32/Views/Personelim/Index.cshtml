@using WebApplication32.Models
@model List<Personel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<table class="table table-bordered">
    <tr>

        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>ŞEHİR</th>
        <th>BİRİM</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

    @foreach(var x in Model)
    {

<tr>

    <td>@x.PersonelID</td>
    <td>@x.Ad</td>
    <td>@x.Soyad</td>
    <td>@x.Sehir</td>
    <td>@x.Birim.BirimAd</td>
    <td><a href="#" class="btn btn-danger">SİL</a></td>
    <td><a href="#" class="btn btn-success">GÜNCELLE</a></td>

</tr>
    }


</table>
<a href="/Personelim/YeniPersonel/" class="btn btn-info">PERSONEL EKLE</a>